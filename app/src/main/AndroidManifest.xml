<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.camera2"
        android:required="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/oficina_sabor"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Instagram"
        tools:targetApi="31">
        <activity
            android:name="com.cdaguiar.oficinadosabor.activity.ComentariosActivity"
            android:exported="false" />
        <activity
            android:name="com.cdaguiar.oficinadosabor.activity.VisualizarPostagemActivity"
            android:exported="false" />
        <activity
            android:name="com.cdaguiar.oficinadosabor.activity.FiltroActivity"
            android:exported="false" />
        <activity
            android:name="com.cdaguiar.oficinadosabor.activity.PerfilAmigoActivity"
            android:exported="false" />
        <activity
            android:name="com.cdaguiar.oficinadosabor.activity.EditarPerfilActivity"
            android:exported="false"
            android:parentActivityName="com.cdaguiar.oficinadosabor.activity.MainActivity" />
        <activity
            android:name="com.cdaguiar.oficinadosabor.activity.CadastroActivity"
            android:exported="false"
            android:theme="@style/AppThemeLogin" />
        <activity
            android:name="com.cdaguiar.oficinadosabor.activity.MainActivity"
            android:exported="false" />
        <activity
            android:name="com.cdaguiar.oficinadosabor.activity.LoginActivity"
            android:exported="true"
            android:theme="@style/AppThemeLogin">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>